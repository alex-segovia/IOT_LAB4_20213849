<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#51D1F6"
    tools:context=".PosicionesFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginVertical="20dp"
            android:textSize="22sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:text="Posiciones de Liga" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/idLigaPosiciones"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_marginHorizontal="10dp"
                android:textSize="13sp"
                android:paddingHorizontal="20dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/fondo_edit_text"
                android:hint="idLiga">

            </EditText>

            <EditText
                android:id="@+id/seasonPosiciones"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:layout_marginEnd="10dp"
                android:textSize="13sp"
                android:paddingHorizontal="20dp"
                android:backgroundTint="@color/white"
                android:background="@drawable/fondo_edit_text"
                android:hint="Temporada">

            </EditText>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/botonBuscarPosiciones"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:textSize="13sp"
                android:backgroundTint="#050849"
                android:layout_weight="1"
                android:text="Buscar">

            </com.google.android.material.button.MaterialButton>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewPosiciones"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="10dp">

        </androidx.recyclerview.widget.RecyclerView>

    </LinearLayout>

</FrameLayout>